@model GestAgape.Core.Entities.Parametrage.Filiere

@{
    ViewData["Title"] = "Suppression";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Supprimer une Série</h1>

<h3>Voulez vous vraiment supprimer cette Série?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Libelle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departement.Libelle)
        </dd>
    </dl>
    
    <form asp-action="DeleteFiliere">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Filiere">Retour en arriere</a>
    </form>
</div>
