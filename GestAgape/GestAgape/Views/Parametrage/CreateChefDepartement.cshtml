                </div>
                <div class="form-group col-4">
                    <label class="control-label">Adresse Email<span class="" style="color:red"> *</span></label>
                    <input asp-for="Email" class="form-control form-control-sm" placeholder="Veuillez entrer son adresse e-mail" />
                </div>

                <div class="form-group col-4">
                    <label class="control-label">Nationalité<span class="" style="color:red"> *</span></label>
                    <input asp-for="Nationalite" class="form-control form-control-sm" placeholder="Veuillez entrer la nationalité du chef de département" />
                </div>

            </div>



            <div class="form-group row col-12">


                <div class="form-group col-4">

                    <label asp-for="Langue" class="form-label">Langue principale<span class="" style="color:red"> *</span> </label>
                    <select asp-for="Langue" class="form-control form-control-sm">
                        <option disabled> Sélectionne le statut matrimonial</option>
                        <option value="Francais">Francais</option>
                        <option value="Anglais">Anglais</option>
                        <option value="Allemand">Allemand</option>
                        <option value="Espagnol">Espagnol</option>
                        <option value="Chinois">Latin</option>
                        <option value="Chinois">Chinois</option>

                    </select>

                </div>

                <div class="form-group col-4">

                    <label asp-for="StatutMatrimonial" class="form-label">Statut Matrimonial <span class="" style="color:red"> *</span></label>
                    <select asp-for="StatutMatrimonial" class="form-control form-control-sm">
                        <option disabled>selectionne le statut matrimonial</option>
                        <option value="Celibataire">Celibataire</option>
                        <option value="Marié(e)">Marié(e)</option>
                        <option value="Veuve">Veuve</option>
                        <option value="Divorcé">Divorcé</option>
                    </select>

                </div>

                <br />
                <div class="form-outline col-md-4">
                    <label asp-for="Sexe" class="form-label">Genre </label>
                    <select asp-for="Sexe" class="form-control form-control-sm">
                        <option> Masculin </option>
                        <option> Feminin </option>
                    </select>
                </div>

            </div>

            <div class="form-group row col-12">


                <div class="form-group col-4">
                    <label asp-for="DepartementId" class="control-label">Département<span class="" style="color:red"> *</span></label>
                    <select asp-for="DepartementId" class="form-control form-control-sm">

                        @foreach (GestAgape.Core.Entities.Parametrage.Departement dpt in ViewBag.DepartementList)
                        {
                            <option value="@dpt.Id">@dpt.Libelle</option>
                        }

                    </select>
                </div>
                <div class="form-group col-4">
                    <label asp-for="DateNomination" class="control-label"> Date de nomination</label>
                    <input asp-for="DateNomination" class="form-control form-control-sm" />
                </div>


                <div class="form-outline col-md-4 mt-8">
                    <div class="row mt-3">
                        <label asp-for="Handicape" class=" col-5">
                            Handicape?
                        </label>
                        <br />
                        <label class="row col-3">
                            <input asp-for="Handicape" type="radio" class="form-control-sm" value="false" checked onclick="afftext('hidden');" />  &nbsp;&nbsp;&nbsp;&nbsp;   Non
                        </label>
