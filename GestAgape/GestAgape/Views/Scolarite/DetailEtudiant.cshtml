                            <i class="fa fa-envelope"></i>Email : @Model.DemandeAdmission.Candidat.Personne.Email
                        </li>
                        <li>
                            <i class="fa fa-phone"></i>Telephone : @Model.DemandeAdmission.Candidat.Personne.Telephone
                        </li>
                    </ul>
