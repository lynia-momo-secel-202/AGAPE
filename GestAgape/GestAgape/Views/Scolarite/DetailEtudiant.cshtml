                    <div class="form-group row col-12">

                        <div class="col-md-12">
                            <div class="form-group row col-12">
                                <div class="form-group col-4">
                                    <label class="control-label"> Vision</label>
                                    <input asp-for="@Model.DemandeAdmission.Candidat.Vision" class="form-control" readonly />
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="@Model.DemandeAdmission.Candidat.Quartier" class="control-label">Quartier</label>
                                    <input asp-for="@Model.DemandeAdmission.Candidat.Quartier" class="form-control" readonly />
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="@Model.DemandeAdmission.Candidat.Etablissement" class="control-label">Etablissement</label>
                                    <input asp-for="@Model.DemandeAdmission.Candidat.Etablissement" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="form-group row col-12">
