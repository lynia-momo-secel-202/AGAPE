@using GestAgape.Core.Entities.Admission
@model GestAgape.Core.Entities.Admission.Paiement

@{
    ViewData["Title"] = "Enregistrement du paiement";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Module"] = "Admission";
    double? montant = 0;
    string et = "Frais d'étude de dossier";
    string c = "Frais de concours";

}

<div class="container">

    <div class="row justify-content-center">

        <form class="col-12 col-md-12 col-lg-12" asp-controller="Admission" asp-action="CreatePaiement">

            <div id="response_message_case"></div>

            <div class="col-md-12 col-sm-12 col-lg-12 mb-2">
                <div class="form-group row mb-2">
                    <div class="col-md-6">

                        <label asp-for="DemandeAdmission.Candidat.Personne.Nom">Nom(s)</label>
                        <input asp-for="DemandeAdmission.Candidat.Personne.Nom" type="text" class="form-control" readonly>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DemandeAdmission.Candidat.Personne.Prenom">Prénom(s)</label>
                        <input asp-for="DemandeAdmission.Candidat.Personne.Prenom" type="text" class="form-control" readonly>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-lg-12 mb-2">
                <div class="form-group row mb-2">
                    @if (Model.DemandeAdmission.TypeAdmission == TypeAdmission.Concours)
                    {
                        <div class="col-md-6 mt-4">
                            @foreach (FraisConcours fc in ViewBag.FraisConcours)
                            {

                                @if (fc.CycleId == Model.DemandeAdmission.Classe.CycleId && fc.AnneeAcademiqueId == Model.DemandeAdmission.AnneeAcademiqueId)
                                {
                                    montant = fc.Montant;
                                    break;
                                }
                            }
                            <label>Frais de concours</label>
                            <input type="text" value=@montant class="form-control" readonly>
                        </div>
                        <div class="col-md-6 mt-4">
                            <label asp-for="DemandeAdmission.Classe.Cycle.Code">Cycle</label>
                            <input asp-for="DemandeAdmission.Classe.Cycle.Code" type="text" class="form-control" readonly>
                        </div>
                        <input type="hidden" asp-for="Motif" value=@Motif.FraisConcours />
                    }
                    else
                    {
                        <div class="col-md-4 mt-4">
                            @foreach (FraisEtudeDossier fed in ViewBag.FraisEtudeDossier)
                            {

                                @if (fed.ClasseId == Model.DemandeAdmission.ClasseId && fed.AnneeAcademiqueId == Model.DemandeAdmission.AnneeAcademiqueId)
                                {
                                    montant = fed.Montant;
                                    break;
                                }
                            }

                            <label>Frais d'étude de dossier</label>
                            <input type="text" class="form-control" value=@montant readonly>
                        </div>
                        <div class="col-md-4 mt-4">
                            <label asp-for="DemandeAdmission.Classe.Code">Classe</label>
                            <input asp-for="DemandeAdmission.Classe.Code" type="text" class="form-control" readonly>
                        </div>
                        @if (Model.DemandeAdmission.TypeAdmission == TypeAdmission.Concours)
                        {
                            <div class="col-md-4 mt-4">
                                <label asp-for="DemandeAdmission.TypeAdmission" class=" fw-bold ">Motif du versement </label>
                                <input value="@c" type="text" class="form-control" readonly>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-4 mt-4">
                                <label class=" fw-bold ">Motif du versement </label>
                                <input value="@et" type="text" class="form-control" readonly>
                            </div>
                        }

                        <input type="hidden" asp-for="Motif" value=@Motif.FraisEtudeDossier />
                    }
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-lg-12 mb-2">

                <div class="form-group row">

                    <div class="col-md-6">
                        <label asp-for="Montant" class=" fw-bold " for="#"> Montant</label>
                        <input asp-for="Montant" max="10000" class="form-control" placeholder="Saisissez le montant du versement">
                    </div>
                    <div class="col-md-6">
                        <label class="">Mode de versement </label>

                        <select asp-for="Modepaiement" class="form-control ">
                            <option value=@Modepaiement.Espece>Par espèce</option>
                            <option value=@Modepaiement.OrangeMoney> Par orange money</option>
                            <option value=@Modepaiement.MobileMoney>Par mobile money</option>
                            <option value=@Modepaiement.VersementBancaire>par banque</option>
                            <option value=@Modepaiement.Cheque>par chèque</option>
                            <option value=@Modepaiement.Autres>autres</option>
                        </select>

                    </div>
                </div>
            </div>


            <button type="reset" class="btnperso" style="background-color: #e81d27; border:#e81d27; float: left;">Annuler</button>
            <button type="submit" class="btnperso" style="background-color: #22a9e1; border: #22a9e1;float: right ">Valider</button>
            <input type="hidden" asp-for="DemandeAdmissionId" />

        </form>
        <a asp-controller="Admission" asp-action="Paiement" style="margin-top:14px;">

            <svg fill="#000000" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
