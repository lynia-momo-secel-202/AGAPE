                        </svg>

        </a>

    </div>
</div>




<script>
    const formElem = document.querySelector("form");
    $("#loader").hide();
    $('form').submit(function (e) {
        $("#loader").show();
        let errorMessages = "";
        e.preventDefault();
        //Swal.fire('Any fool can use a computer')
        var data = $('form').serializeArray().reduce(function (obj, item) {
            obj[item.name] = item.value;
            return obj;
        }, {});
        console.log(data);
        axios({
            url: "@Url.Action("CreatePaiement", "Admission")",
            method: 'POST',
            data: data,
            headers: {
                "content-type": "multipart/form-data"
            }
        })
            .then(response => {
                if (response.data.isValid == true) {
                    Swal.fire(
                        'Réussi',
                        response.data.message,
                        'success'
                    );
                    console.log("Data", response.data);
                    window.location.assign("https://localhost:44349/Admission/PrintRecuPaiement/" + response.data.data);
                } else {
                    Swal.fire(
                        'Echec',
                        response.data.message,
                        'warning'
                    );
                    $("#response_message_case").html('<div class="alert alert-warning" role="alert" id="response_message_case">' + response.data.message + '</div>');
                }
                $("#loader").hide();
                console.log("OK", response);
            })
            .catch(error => {
                for (let err of error.response.data.validationMessages) {
                    errorMessages += err + "</br>";
                }
                Swal.fire(
                    'Echec',
                    error.response.message,
                    'error'
                );
                $("#response_message_case").html('<div class="alert alert-danger" role="alert" id="response_message_case">' + errorMessages + '</div>');
                $("#loader").hide();
                //  console.log(error.response.data.validationMessages);
            });
        return false;

    });
</script>
<style>

    #response_message_case {
        font-size: 12px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}