                        <div class="col-md-12">
                            <div class="form-group row col-12">
                                <div class="form-group col-4">
                                    <label asp-for="Vision" class="control-label"> Vision</label>
                                    <input asp-for="Vision" class="form-control" readonly />
                                </div>

                                <div class="form-group col-4">
                                    <label asp-for="Quartier" class="control-label">Quartier</label>
                                    <input asp-for="Quartier" class="form-control" readonly />
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Etablissement" class="control-label">Etablissement</label>
                                    <input asp-for="Etablissement" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="form-group row col-12">
                                <div class="form-group col-4">
                                    <label asp-for="NomMere" class="control-label">Nom de la mère</label>
                                    <input asp-for="NomMere" class="form-control" readonly />
