@using GestAgape.Core.Entities.Admission
@model GestAgape.Core.Entities.Admission.Candidat

@{
    ViewData["Title"] = "Vue d'ensemble d'un Candidat";
    ViewData["Module"] = "Admission";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<DemandeAdmission> DA = new List<DemandeAdmission>();
    foreach (DemandeAdmission da in ViewBag.DAList)
    {
        if (da.CandidatId == Model.Id)
        {
            DA.Add(da);
        }
    }
    string? val = "";
}

<div class="row">
