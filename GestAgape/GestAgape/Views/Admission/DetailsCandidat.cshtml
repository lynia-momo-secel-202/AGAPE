                                                }
                                            </li>
                                            <li>
                                                @if (Model.DossierPersonnel.Photos != null)
                                                {
                                                    <a target="_blank" data-placement="top" data-toggle="tooltip" data-original-title="Photo" href="@Url.Content($"~/Data/DossierFolder/{ Model.DossierPersonnel.Photos}")"><i class="fa fa-picture-o"></i>@Model.DossierPersonnel.Photos</a>
