                    <div class="profile_img">
                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            @if (Model.DossierPersonnel.Photos != null)
                            {
                                <img src=@Url.Content($"~/Data/DossierFolder/{ Model.DossierPersonnel.Photos}") alt="Avatar" title="Change the avatar" class="img-responsive avatar-view" width="212px" height="212px" />
                            }
                            else
                            {
                                <img src="~/img/avatars/avatar.png" alt="Avatar" title="Change the avatar" class="img-responsive avatar-view" width="212px" height="212px" />
                            }
                        </div>

                    </div>
                    <h3 class="prod_title" style="font-weight:bold;font-size:xx-large"> @Model.Personne.Nom @Model.Personne.Prenom </h3>

                    <ul class="list-unstyled user_data">
                        <li>
                            <i class="fa fa-venus-mars"></i> Sexe : @Model.Personne.Sexe
                        </li>
                        <li>
                            <i class="fa fa-calendar"></i> Date de Naissance: @Model.Personne.DateNaissance
                        </li>
                        <li>
                            <i class="fa fa-location-arrow"></i> Nationalite : @Model.Personne.Nationalite
                        </li>
                        <li>
                            <i class="fa fa-map-marker user-profile-icon"></i> Lieu de naissance : @Model.Personne.LieuNaissance
                        </li>
                        <li>
                            <i class="fa fa-tag"></i>Statut Matrimonial: @Model.Personne.StatutMatrimonial
                        </li>
                        <li>
                            <i class="fa fa-registered"></i> Region : @Model.Personne.Region
                        </li>
                        <li>
                            <i class="fa fa-language"></i> Langue : @Model.Personne.Langue
                        </li>
